@model IEnumerable<Basic_Blog.Models.Post>

@{
    ViewData["Title"] = "Blog Posts";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New Post</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p class="card-text">
                            <strong>Description:</strong> @Html.DisplayFor(modelItem => item.Description)
                        </p>
                        <p class="card-text">
                            <strong>Type:</strong> @Html.DisplayFor(modelItem => item.PostType)
                        </p>
                        <p class="card-text">
                            <strong>Author:</strong> @Html.DisplayFor(modelItem => item.Author.Name)
                        </p>

                        <div class="text-end">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
