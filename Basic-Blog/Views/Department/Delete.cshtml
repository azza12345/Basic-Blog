@model Basic_Blog.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="text-danger text-center">@ViewData["Title"]</h1>
    <h3 class="text-warning text-center">Are you sure you want to delete this department?</h3>

    <div class="card border-danger mb-3">
        <div class="card-header bg-danger text-white">Department Details</div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreateDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreateDate)
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="text-center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
        <a asp-action="Index" class="btn btn-info btn-lg">Back to List</a>
    </form>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light background */
    }
    .btn {
        transition: background-color 0.3s, color 0.3s;
    }
    .btn:hover {
        background-color: #c82333; /* Darker red on hover for delete */
        color: white;
    }
    .btn-info:hover {
        background-color: #007bff; /* Darker blue on hover for back button */
        color: white;
    }
</style>
